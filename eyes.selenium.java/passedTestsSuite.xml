            <class name="com.applitools.eyes.renderingGrid.TestVGDemo"/>
            <class name="com.applitools.eyes.renderingGrid.TestTopSites"/>
            <class name="com.applitools.eyes.renderingGrid.TestRenderingGridServiceWithJsHook"/>
